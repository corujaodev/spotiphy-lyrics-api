{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/**/*Controller.ts"
  ],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "basic"
      }
    }
  },
  "routes": {
    "routesDir": "build",
    "middleware": "express",
    "authenticationModule": "./src/middlewares/Authentication.ts"
  }
}